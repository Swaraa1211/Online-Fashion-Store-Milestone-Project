@{
}

<h2> Products!!!!</h2>
<br/>
<a href="/Products/CreateProducts"><button class="btn-primary float-right"> + Add Product</button></a>

<table class="table">
    <thead>
        <<tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Product Desc</th>
            <th>Image</th>
            <th>Color</th>
            <th>Size</th>
            <th>Price</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(ProductsModel products in @ViewBag.ProductsList)
        {
            <tr>
                <th>@products.Product_Id</th>
                <th>@products.Product_Name</th>
                <th>@products.Product_Description</th>
                <th><img src="@products.Product_Image" style="width: 200px; height: 200px;" /></th>
                <th>@products.Color</th>
                <th>@products.Size</th>
                <th>@products.Price</th>
                <th>
                    <a asp-action="EditProduct" asp-route-id="@products.Product_Id"><button class="btn btn-primary" type="submit">Edit</button></a>
                    <a asp-action="DeleteProduct" asp-route-id="@products.Product_Id"><button class="btn btn-primary" type="submit">Delete</button></a>

                </th>
            </tr>
            
        }
    </tbody>
</table>
