@{
    ViewData["Title"] = "EditProduct";
}
@model FashionStore.Models.ProductsModel;
<h2>Choose color here</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditUserProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Product_Id" />
            <div class="form-group">
                <label class="control-label"> Select Color</label>
                <select name="colors" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewBag.ColorList)"></select>
            </div>
            <div class="form-group">
                <label class="control-label"> Select Size</label>
                <select name="sizes" class="form-control" asp-items="@((IEnumerable<SelectListItem>)ViewBag.SizeList)"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" /> |
                @*<a asp-action="Index"><button class="btn btn-primary" type="submit">Back</button></a>*@
            </div>

        </form>
        <div>
            <a href="/UserProduct/UserProductIndex"><button class="btn btn-primary" type="submit">Back</button></a>
        </div>
    </div>
</div>